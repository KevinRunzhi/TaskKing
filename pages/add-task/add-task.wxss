/* 自定义导航栏 - 增加高度 */
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #007AFF;
  z-index: 9999;
}

.nav-content {
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 16rpx;
  position: relative;
}

.nav-back {
  width: 80rpx;
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  z-index: 10;
}

.nav-back-icon {
  font-size: 50rpx;
  color: white;
  font-weight: 300;
  line-height: 1;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  line-height: 56px;
  text-align: center;
}

.nav-placeholder {
  width: 80rpx;
}

.container {
  padding: 40rpx 32rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 表单组 */
.form-group {
  margin-bottom: 48rpx;
  position: relative;
}

.label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.manage-link {
  font-size: 26rpx;
  color: #007AFF;
}

.category-picker {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  min-height: 64rpx;
}

.category-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.category-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.input {
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  width: 100%;
  min-height: 88rpx;
  line-height: 1.5;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007AFF;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.textarea {
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 32rpx 24rpx;
  font-size: 32rpx;
  width: 100%;
  min-height: 200rpx;
  box-sizing: border-box;
}

.textarea:focus {
  border-color: #007AFF;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 日期选择器 */
.date-picker {
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 28rpx 24rpx;
  font-size: 32rpx;
  color: #333;
  min-height: 96rpx;
  line-height: 40rpx;
  display: block;
  width: 100%;
  box-sizing: border-box;
}

.date-picker.placeholder {
  color: #999;
}

.clear-date {
  color: #007AFF;
  font-size: 28rpx;
  text-align: center;
  padding: 16rpx;
  margin-top: 16rpx;
}

.reminder-toggle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reminder-toggle .label {
  margin-bottom: 0;
}

.reminder-switch {
  transform: scale(0.9);
}

.recurrence-toggle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recurrence-toggle .label {
  margin-bottom: 0;
}

.recurrence-switch {
  transform: scale(0.9);
}

.interval-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
}

.interval-input {
  flex: 1;
  border: none;
  font-size: 32rpx;
  color: #333;
  background-color: transparent;
}

.interval-input:focus {
  outline: none;
}

.interval-unit {
  font-size: 28rpx;
  color: #666;
}

.weekday-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.weekday-option {
  min-width: 120rpx;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  background-color: white;
  border: 2rpx solid #e0e0e0;
  color: #333;
  transition: all 0.3s;
}

.weekday-option.selected {
  background-color: #007AFF;
  border-color: #007AFF;
  color: white;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

/* 优先级选择 */
.priority-options {
  display: flex;
  gap: 24rpx;
}

.priority-option {
  flex: 1;
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s;
}

.priority-option.selected {
  border-color: #007AFF;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

.priority-color {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.priority-color.priority-high {
  background-color: #FF3B30;
}

.priority-color.priority-medium {
  background-color: #FF9500;
}

.priority-color.priority-low {
  background-color: #34C759;
}

.priority-text {
  font-size: 28rpx;
  color: #333;
}

/* 错误提示 */
.error-container {
  background-color: #fef2f2;
  border: 2rpx solid #fecaca;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.error-item {
  color: #dc2626;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.error-item:last-child {
  margin-bottom: 0;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 80rpx;
  padding-bottom: 40rpx;
}

.button-group button {
  flex: 1;
  padding: 32rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
}

.btn-primary:disabled {
  background-color: #ccc;
  color: #999;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }

  .input,
  .textarea,
  .date-picker,
  .priority-option {
    background-color: #2a2a2a;
    border-color: #444;
    color: white;
  }

  .label,
  .priority-text {
    color: white;
  }

  .date-picker.placeholder {
    color: #888;
  }

  .char-count {
    color: #888;
  }
}

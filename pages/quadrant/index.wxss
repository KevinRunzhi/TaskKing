.page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  background: #f5f7fb;
}

.header-card {
  margin-bottom: 24rpx;
}

.header-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1f2937;
}

.header-subtitle {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #64748b;
}

.filter-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 32rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 24rpx;
}

.filter-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.filter-row + .filter-row {
  margin-top: 20rpx;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 14rpx 20rpx;
  border-radius: 20rpx;
  background: #f8fafc;
  border: 2rpx solid #e2e8f0;
}

.search-icon {
  font-size: 30rpx;
  color: #94a3b8;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1f2937;
}

.search-input::placeholder {
  color: #94a3b8;
}

.search-clear {
  margin-left: 12rpx;
  font-size: 30rpx;
  color: #cbd5f5;
}

.mode-buttons {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.mode-toggle {
  padding: 16rpx 26rpx;
  font-size: 28rpx;
  border-radius: 18rpx;
  border: 2rpx solid #e2e8f0;
  color: #475569;
  background: #f8fafc;
}

.mode-toggle.primary {
  border-color: #2563eb;
  color: #2563eb;
  background: #eef2ff;
  box-shadow: 0 10rpx 18rpx rgba(37, 99, 235, 0.12);
}

.mode-toggle.secondary {
  border-color: #475569;
  color: #475569;
  background: #e2e8f0;
}

.mode-toggle.selected {
  border-color: #1d4ed8;
  color: #ffffff;
  background: #2563eb;
  box-shadow: 0 10rpx 18rpx rgba(37, 99, 235, 0.2);
}

.drag-overlay {
  position: fixed;
  inset: 0;
  background: #f5f7fb;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  z-index: 99;
}

.overlay-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.overlay-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.overlay-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.overlay-hint {
  font-size: 24rpx;
  color: #475569;
}

.overlay-btn {
  padding: 12rpx 24rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  border: 2rpx solid #e2e8f0;
  background: #f8fafc;
  color: #475569;
}

.overlay-btn.primary {
  border-color: #2563eb;
  background: #2563eb;
  color: #ffffff;
  box-shadow: 0 8rpx 16rpx rgba(37, 99, 235, 0.18);
}

.overlay-btn.close {
  border-color: #475569;
  color: #1f2937;
  background: #e2e8f0;
}

.overlay-content {
  flex: 1;
  display: flex;
}

.picker-display {
  min-width: 220rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 22rpx;
  border-radius: 18rpx;
  border: 2rpx solid #e2e8f0;
  background: #f8fafc;
  color: #475569;
  font-size: 26rpx;
}

.picker-arrow {
  margin-left: 12rpx;
  font-size: 26rpx;
  color: #94a3b8;
}

.batch-actions {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  border-radius: 16rpx;
  background: #e0f2fe;
  color: #0369a1;
}

.batch-btn.danger {
  background: #fee2e2;
  color: #dc2626;
}

.batch-btn.disabled {
  opacity: 0.5;
}

.tag-scroll {
  margin-top: 18rpx;
  display: flex;
  flex-direction: row;
}

.tag-chip {
  padding: 10rpx 20rpx;
  border-radius: 18rpx;
  background: #f1f5f9;
  color: #475569;
  font-size: 24rpx;
  margin-right: 16rpx;
  border: 2rpx solid transparent;
}

.tag-chip.active {
  background: #ede9fe;
  color: #4338ca;
  border-color: #6366f1;
}

.stats-card {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 12rpx 24rpx rgba(148, 163, 184, 0.18);
}

.stat-item.q1 {
  border-left: 6rpx solid #ef4444;
}

.stat-item.q2 {
  border-left: 6rpx solid #06b6d4;
}

.stat-item.q3 {
  border-left: 6rpx solid #f59e0b;
}

.stat-item.q4 {
  border-left: 6rpx solid #4ade80;
}

.stat-label {
  font-size: 24rpx;
  color: #64748b;
}

.stat-value {
  margin-top: 10rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.stacked-board {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stacked-quadrant {
  background: #ffffff;
  border-radius: 22rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 23, 42, 0.1);
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.stacked-quadrant.q1 {
  border-top: 6rpx solid #ef4444;
}

.stacked-quadrant.q2 {
  border-top: 6rpx solid #06b6d4;
}

.stacked-quadrant.q3 {
  border-top: 6rpx solid #f59e0b;
}

.stacked-quadrant.q4 {
  border-top: 6rpx solid #4ade80;
}

.stacked-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stacked-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.stacked-count {
  font-size: 26rpx;
  color: #64748b;
}

.stacked-empty {
  font-size: 24rpx;
  color: #94a3b8;
  text-align: center;
  padding: 24rpx 0;
}

.stacked-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.stacked-card {
  background: #f8fafc;
  border-radius: 18rpx;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  box-shadow: 0 8rpx 16rpx rgba(148, 163, 184, 0.12);
}

.stacked-card-title {
  font-size: 30rpx;
  color: #0f172a;
  font-weight: 600;
}

.stacked-card-meta {
  font-size: 24rpx;
  color: #334155;
}

.stacked-card-due {
  font-size: 22rpx;
  color: #475569;
  background: #e2e8f0;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
}

.stacked-card-actions {
  margin-top: 4rpx;
  display: flex;
  gap: 16rpx;
}

.stacked-card-action {
  font-size: 24rpx;
  color: #2563eb;
}

.quadrant-wrapper {
  position: relative;
  flex: 1;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 32rpx rgba(15, 23, 42, 0.12);
}

.quadrant-area {
  width: 100%;
  height: 100%;
  background-image:
    /* 第一象限（右上）- 立即处理 - 红色 */
    linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(239, 68, 68, 0.05) 100%),
    /* 第二象限（右下）- 计划安排 - 青色 */
    linear-gradient(45deg, rgba(6, 182, 212, 0.15) 0%, rgba(6, 182, 212, 0.05) 100%),
    /* 第三象限（左上）- 尽量委托 - 橙色 */
    linear-gradient(45deg, rgba(245, 158, 11, 0.15) 0%, rgba(245, 158, 11, 0.05) 100%),
    /* 第四象限（左下）- 可以舍弃 - 绿色 */
    linear-gradient(135deg, rgba(74, 222, 128, 0.15) 0%, rgba(74, 222, 128, 0.05) 100%);
  background-position:
    top right,    /* Q1 */
    bottom right, /* Q2 */
    top left,     /* Q3 */
    bottom left;  /* Q4 */
  background-size: 50% 50%;
  background-repeat: no-repeat;
  border-radius: 28rpx;
  border: 2rpx solid #dbe3f0;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}

.quadrant-area::before,
.quadrant-area::after {
  content: '';
  position: absolute;
  background: rgba(99, 102, 241, 0.45);
}

.quadrant-area::before {
  width: 2rpx;
  height: 100%;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}

.quadrant-area::after {
  width: 100%;
  height: 2rpx;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.task-card {
  width: 200rpx;
  min-height: 140rpx;
}

.card-surface {
  width: 100%;
  min-height: 140rpx;
  background: #ffffff;
  border-radius: 18rpx;
  padding: 14rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-shadow: 0 8rpx 16rpx rgba(15, 23, 42, 0.12);
  position: relative;
}

.card-surface.selected {
  border: 3rpx solid #2563eb;
}

.quadrant-1 {
  border-left: 6rpx solid #ef4444;
}

.quadrant-2 {
  border-left: 6rpx solid #06b6d4;
}

.quadrant-3 {
  border-left: 6rpx solid #f59e0b;
}

.quadrant-4 {
  border-left: 6rpx solid #4ade80;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #0f172a;
  width: 100%;
  line-height: 1.4;
}

.card-due {
  font-size: 22rpx;
  color: #475569;
  background: #f1f5f9;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.card-due.danger {
  color: #dc2626;
  background: rgba(248, 113, 113, 0.18);
}

.batch-overlay {
  position: absolute;
  inset: 0;
  background: rgba(15, 23, 42, 0.45);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.batch-checkbox {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 4rpx solid #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #ffffff;
}

.batch-checkbox.checked {
  background: #2563eb;
  border-color: #2563eb;
}

.axis-label {
  position: absolute;
  font-size: 24rpx;
  color: #475569;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 14rpx;
  border-radius: 16rpx;
  pointer-events: none;
}

.axis-left {
  left: -10rpx;
  top: 50%;
  transform: translate(-100%, -50%);
}

.axis-right {
  right: -10rpx;
  top: 50%;
  transform: translate(100%, -50%);
}

.axis-top {
  top: -8rpx;
  left: 50%;
  transform: translate(-50%, -100%);
}

.axis-bottom {
  bottom: -8rpx;
  left: 50%;
  transform: translate(-50%, 100%);
}

.quadrant-title {
  position: absolute;
  font-size: 22rpx;
  color: #334155;
  background: rgba(255, 255, 255, 0.8);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  pointer-events: none;
}

.title-1 {
  top: 18rpx;
  right: 18rpx;
}

.title-2 {
  bottom: 18rpx;
  right: 18rpx;
}

.title-3 {
  top: 18rpx;
  left: 18rpx;
}

.title-4 {
  bottom: 18rpx;
  left: 18rpx;
}

.completed-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 32rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.section-count {
  font-size: 26rpx;
  color: #64748b;
}

.empty-completed {
  padding: 36rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #94a3b8;
}

.completed-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.completed-item {
  background: #f8fafc;
  border-radius: 18rpx;
  padding: 20rpx 24rpx;
}

.completed-title {
  font-size: 28rpx;
  color: #0f172a;
  font-weight: 500;
}

.completed-meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #64748b;
}

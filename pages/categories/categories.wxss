.categories-page {
  padding: 32rpx 24rpx 80rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 24rpx;
}

.list-title {
  margin-top: 48rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  margin: 24rpx 0 16rpx;
}

.new-category-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
}

.name-input {
  width: 100%;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
}

.name-input:focus {
  border-color: #6366f1;
}

.color-grid,
.icon-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.color-swatch {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  border: 4rpx solid transparent;
  box-sizing: border-box;
}

.color-swatch.selected {
  border-color: #111827;
}

.icon-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background-color: white;
}

.icon-item.selected {
  border-color: #6366f1;
  background-color: #eef2ff;
}

.primary-btn {
  margin-top: 32rpx;
  background: linear-gradient(135deg, #6366f1, #4f46e5);
  color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.primary-btn:disabled {
  background: #cbd5f5;
  color: white;
}

.empty-hint {
  text-align: center;
  color: #6b7280;
  font-size: 28rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 48rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.05);
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.category-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 6rpx 20rpx rgba(15, 23, 42, 0.06);
}

.category-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.category-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: white;
}

.category-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.category-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.color-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(17, 24, 39, 0.1);
}

.category-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #4f46e5;
  border: 2rpx solid #e0e7ff;
  border-radius: 12rpx;
  background-color: #eef2ff;
}

.action-btn.delete {
  color: #ef4444;
  border-color: #fecaca;
  background-color: #fee2e2;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.35);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 40rpx 24rpx;
  box-sizing: border-box;
  z-index: 999;
}

.modal-content {
  width: 100%;
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx 24rpx 40rpx;
  box-sizing: border-box;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
}

.modal-actions {
  margin-top: 32rpx;
  display: flex;
  gap: 16rpx;
}

.modal-actions .action-btn {
  flex: 1;
  background-color: #f3f4f6;
  border-color: transparent;
  color: #374151;
}

.modal-actions .primary-btn {
  flex: 1;
  margin-top: 0;
}

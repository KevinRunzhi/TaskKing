/* pages/index/index.wxss */

.container {
  padding-bottom: 200rpx;
}

/* 头部区域 */
.header {
  padding: 40rpx 20rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin: -20rpx -20rpx 40rpx -20rpx;
  border-radius: 0 0 24rpx 24rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 20rpx;
}

.sort-picker {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  border: 2rpx solid #e0e0e0;
  font-size: 28rpx;
}

.arrow {
  margin-left: 12rpx;
  font-size: 20rpx;
  color: #999;
}


/* 搜索框 */
.search-container {
  margin-bottom: 32rpx;
  padding: 0 20rpx;
}

.search-input {
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
}

.search-input:focus {
  border-color: #007AFF;
}

.category-bar {
  padding: 0 20rpx 24rpx;
  display: flex;
  align-items: center;
}

.category-chip {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  border: 2rpx solid transparent;
  color: #475569;
  margin-right: 16rpx;
}

.category-chip:last-child {
  margin-right: 0;
}

.category-chip-icon {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
}

.category-chip.active {
  color: #1f2937;
}

.category-chip.manage {
  background-color: #F1F5F9;
  color: #475569;
  border-color: transparent !important;
}

.category-chip-icon.manage-icon {
  background-color: #E2E8F0 !important;
  color: #1f2937;
}

/* 任务分类 */
.task-categories {
  padding: 0 20rpx;
}

.category-section {
  margin-bottom: 48rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.category-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.category-count {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.empty-category {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 任务列表 */
.task-list {
  margin: 0;
}

.task-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  transition: transform 0.2s;
}

.task-item:active {
  transform: scale(0.98);
}

.task-item.completed {
  opacity: 0.7;
}

.task-content {
  flex: 1;
  margin-right: 16rpx;
}

.task-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

/* 自定义复选框 */
.custom-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 4rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  background-color: white;
  cursor: pointer;
}

.custom-checkbox:active {
  transform: scale(0.9);
}

.custom-checkbox.checked {
  border-color: #007AFF;
  background-color: #007AFF;
}

.checkbox-icon {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
  pointer-events: none;
}

.task-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 16rpx;
}

.task-title.completed-text {
  text-decoration: line-through;
  color: #999;
}

.priority-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.priority-high {
  background-color: #ffe5e5;
  color: #FF3B30;
}

.priority-medium {
  background-color: #fff3e0;
  color: #FF9500;
}

.priority-low {
  background-color: #e8f5e8;
  color: #34C759;
}

.task-description {
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 16rpx;
  margin-left: 64rpx;
}

.task-meta {
  display: flex;
  align-items: center;
  margin-left: 64rpx;
  gap: 24rpx;
  flex-wrap: wrap;
}

.due-date {
  font-size: 24rpx;
  color: #666;
}

.due-date.overdue {
  color: #FF3B30;
  font-weight: 500;
}

.due-time {
  font-size: 24rpx;
  color: #666;
}

.recurrence-tag {
  font-size: 24rpx;
  color: #2563EB;
  background-color: #DBEAFE;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.created-date {
  font-size: 24rpx;
  color: #999;
}

.task-category-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  border: 2rpx solid transparent;
}

/* 操作按钮 */
.task-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: all 0.2s;
}

.edit-btn {
  background-color: #f0f9ff;
  color: #007AFF;
}

.edit-btn:active {
  background-color: #e0f2fe;
}

.delete-btn {
  background-color: #fef2f2;
  color: #FF3B30;
}

.delete-btn:active {
  background-color: #fee2e2;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  bottom: 180rpx;
  right: 40rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #007AFF, #0056d3);
  border-radius: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.4);
  z-index: 100;
  transition: transform 0.2s;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  color: white;
  font-size: 48rpx;
  font-weight: 300;
}

/* 全局样式 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 按钮样式 */
.btn-primary {
  background-color: #007AFF;
  color: white;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  border: none;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
}

.btn-danger {
  background-color: #FF3B30;
  color: white;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  border: none;
}

/* 输入框样式 */
.input {
  background-color: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}

.input:focus {
  border-color: #007AFF;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 优先级颜色 */
.priority-high {
  color: #FF3B30;
}

.priority-medium {
  color: #FF9500;
}

.priority-low {
  color: #34C759;
}

/* 文本样式 */
.text-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.text-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
}

.text-small {
  font-size: 24rpx;
  color: #999;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-row {
  flex-direction: row;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

.flex-1 {
  flex: 1;
}